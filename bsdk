USE [4372-Mohammad Hussain]

CREATE TABLE BOOKS (
id_book INT PRIMARY KEY IDENTITY(1,1),
name_book VARCHAR(30) NOT NULL,
price_book FLOAT NOT NULL
);

SELECT * FROM BOOKS;

CREATE TABLE STUDENTS(
id_st INT PRIMARY KEY IDENTITY(1,1),
name_st VARCHAR(30) NOT NULL,
id_book INT CONSTRAINT  bookconstraitn FOREIGN KEY REFERENCES BOOKS(id_book));

SELECT * FROM STUDENTS;

INSERT INTO BOOKS 
