('BOOK3',300),
('BOOK4',400)
SELECT * FROM BOOKS;






USE [4372-Mohammad Hussain]


CREATE PROCEDURE spGetBookDetails
@name_book VARCHAR(25)
AS
BEGIN
select * from BOOKS WHERE name_book = @name_book;
END

